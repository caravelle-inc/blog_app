<h2>管理者ページ</h2>

<p><%= link_to '管理者情報編集', edit_admin_registration_path, :class => 'navbar-link' %></p>


<h3>User 一覧</h3>
<table class="table table-hover">
  <% @users.each do |a| %>
      <tr>
        <td><%= image_tag a.image_url(:thumb_i) %>
        <%= link_to a.name, user_path(a.id) %></td>
        <td class="text-left"><%= link_to "削除", user_path(a.id), data: {confirm: "本当に良いですか？"}, method: :delete %></td>
      </tr>
  <% end %>
</table>
<%#= link_to "アカウント作成", new_user_registration_path, :class => 'navbar-link' %>

<h3>Article 一覧</h3>
<table class="table table-hover">
  <% @articles.each do |a| %>
      <tr>
        <td><%= link_to a.title, article_path(a.id) %></td>
        <td><% @user = User.find(a.user_id) %></td>
        <td><%= link_to @user.name, user_path(@user.id) %></td>
        <td><%= link_to "削除", article_path(a.id), method: :delete, data: {confirm: "削除していいですか？"} %></td>
      </tr>
  <% end %>
</table>
