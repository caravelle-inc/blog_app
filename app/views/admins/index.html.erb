<h2>管理者ページ</h2>

<p><%= link_to '管理者情報編集', edit_admin_registration_path, :class => 'navbar-link' %></p>


<h3>ユーザ一覧</h3>
<table class="table table-hover">
  <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.image_url(:thumb_i) %>
        <%= link_to user.name, user_path(user.id) %></td>
        <td><%= link_to "削除", user_path(user.id), data: {confirm: "本当に良いですか？"}, method: :delete, class: 'btn btn-danger btn-xs' %></td>
      </tr>
  <% end %>
</table>

<h3>記事一覧</h3>
<table class="table table-hover">
  <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article.id) %></td>
        <td><%= link_to article.user.name, user_path(article.user_id) %></td>
        <td><%= link_to "削除", article_path(article.id), method: :delete, data: {confirm: "削除していいですか？"}, class: 'btn btn-danger btn-xs' %></td>
      </tr>
  <% end %>
</table>
