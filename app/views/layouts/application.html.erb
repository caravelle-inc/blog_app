<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<div class="background">
  <body>
    
  <div class="navbar navbar-inverse navbar-fixed-top header-menu" role="navigation">
    <div class="container">
      <div class="row">

        <div class="col-md-8">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
            </button>
            <!--<div class="collapse navbar-collapse">-->
              <ul class="nav navbar-nav">
                <li>
                  <%= link_to image_tag('logo.png'), articles_path, class: "btn btn-default" %>
                </li>
                <li><%= link_to "Articles", articles_path %></li>
                <li><%= link_to "Users", users_path %></li>
                <% if user_signed_in? %>
                    <li><%= link_to "Article New", new_article_path %></li>
                    <li><%= link_to "Favorite", favorites_path %></li>
                    <li><%= link_to "Searches", searches_path %></li>
                <% end %>
              </ul>
            <!--</div>-->
          </div>
        </div>

        <div class="col-md-4">
          <div class="navbar-header">
            <ul class="nav navbar-nav">
              <small>
                <% if user_signed_in? %>
                    <li><strong><%= image_tag current_user.image_url(:thumb_i) %>
                      <%= link_to current_user.name, user_path(current_user.id) %></strong>
                      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></li>
                <% elsif !admin_signed_in? %>
                    <li><%= link_to "新規登録", new_user_registration_path, :class => 'navbar-link' %>
                      <%= link_to "ログイン", new_user_session_path, :class => 'navbar-link' %></li>
                <% end %>

                <% if admin_signed_in? %>
                    <li>
                      <%= link_to '管理ページ', admins_path, :class => 'navbar-link' %>
                      <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, :class => 'navbar-link' %></li>
                <% elsif !user_signed_in? %>
                    <li><%= link_to "管理者ログイン", new_admin_session_path, :class => 'navbar-link' %></li>
                <% end %>
              </small>
            </ul>
          </div>
        </div>


      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-md-8">

        <% if notice %>
            <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <%= yield %>

      </div>
      <div class="col-md-4">
        <% if user_signed_in? %>
            <%= render partial: "layouts/sidebar", locals: {aritcles_new: @articles_new} %>
        <% end %>
      </div>
    </div>
  </div>
  </body>
</div>
</html>



