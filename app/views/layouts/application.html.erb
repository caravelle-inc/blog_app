<!DOCTYPE html>
<html>
<head>
  <title>BlogApp</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<div class="background">
  <body>
  <div class="header">
    <!--<p class="navbar-text pull-right">-->

    <div align="right">
      <% if user_signed_in? %>
          <strong><%= image_tag current_user.image_url(:thumb_i) %>
            <%= link_to current_user.name, user_path(current_user.id) %></strong> |
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% elsif !admin_signed_in? %>
          <%= link_to "アカウント作成", new_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to "ログイン", new_user_session_path, :class => 'navbar-link' %>
      <% end %>

      <% if admin_signed_in? %>
          <strong><%= current_admin.name %></strong>.
          <%= link_to '管理ページ', admins_path, :class => 'navbar-link' %> |
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, :class => 'navbar-link' %>
      <% elsif !user_signed_in? %>
          <%= link_to "管理者ログイン", new_admin_session_path, :class => 'navbar-link' %>
      <% end %>
    </div>
  </div>


  <div class="menu">
    <ul>
      <%= link_to image_tag('logo.png'), articles_path, class: "btn btn-default" %>
      | <%= link_to "Articles", articles_path %> |
      <%= link_to "Users", users_path %> |
      <% if user_signed_in? %>
          <%= link_to "My Page", user_path(current_user.id) %> |
          <%= link_to "Artcle New", new_article_path %> |
          <%= link_to "Favorite", favorites_articles_path if user_signed_in? %> |
      <% end %>
    </ul>
    <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
    <% end %>
  </div>




  <%= yield %>

  </body>
</div>
</html>

