<div id="main">
  <h2><%= @user.name + '_Mypage' %></h2>

  <div id="sidebar">
    <div>
      <h3>< New ></h3>
      <% @articles_new.each do |article| %>
          <li>
            <%= link_to article.title, article_path(article.id) %>
          </li>
      <% end %>
    </div>
  </div>

  <div>
    <%# if @user.image.present? %>
    <%= image_tag @user.image_url(:thumb) %>
    <%# end %>
  </div>

  <p>
    <% if user_signed_in? %>

        <% if !(current_user == @user) %>
            <% if follow?(@user) %>
                <%= link_to "follow", follow_user_path(@user.id), data: {confirm: "フォローしますか？"}, method: :follow %>
            <% else %>
                <%= link_to "unfollow", follow_destroy_user_path(@user.id), data: {confirm: "フォローを外しますか？"}, method: :delete %>
            <% end %>
        <% end %>
    <% end %>

  </p>


  <div class="contents">

    <% if current_user == @user %>
        <p><h4><%= link_to 'プロフィール編集', edit_user_registration_path %></h4></p>
    <% end %>

    <p><h4><%= link_to "Artcle New", new_article_path %></h4></p>

    <p><h4><%= link_to "Favorite", favorites_articles_path if user_signed_in? %></h4></p>

    <div><h4><%= link_to "Follow", follow_list_user_path(@user.id) %></h4></div>

    <div><%= @user.friends_of_from_user.count %></div>

    <div><h4><%= link_to "Follower", follower_list_user_path(@user.id) %></h4></div>

    <div><%= @user.friends_of_to_user.count %></div>

    <div><h4><%= link_to "My articles", my_articles_user_path(@user.id) %></h4></div>
    <div><%= @user_articles.count %></div>

  </div>
  </div>
</div>

