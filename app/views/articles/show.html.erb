<div class="main">

  <h2><%= @article.title %></h2>

  <div class="sidebar">
    <div>
      <h3>< New ></h3>
      <% @articles_new.each do |a| %>
          <li>
            <%= link_to a.title, article_path(a.id) %>
          </li>
      <% end %>
    </div>
  </div>


  <%- if false -%>


      <div class="contents">
        <div>
          <iframe width="600" height="400" src="https://www.youtube.com/watch?v=2Hv_EGZgFzo" frameborder="0" allowfullscreen></iframe>
          <p><%= @article.content %></p>
          <iframe width="420" height="315" src=@article.image frameborder="0" allowfullscreen></iframe>
        </div>
      </div>

  <%- end -%>


  <div>
    <iframe width="600" height="400" src="<%= @article.movie %>" frameborder="0" allowfullscreen></iframe>
    <% if user_signed_in? %>
        <% if favorite_article?(@article) %>
            <%= button_to "お気に入り削除", favorite_destroy_article_path(@article.id), method: :delete, data: {confirm: "削除していいですか？"} %>
        <% else %>
            <%= button_to "お気に入り", favorite_article_path(@article.id), method: :favorite, data: {confirm: "お気に入りに追加しますか"} %>
        <% end %>
    <% end %>
    <div><%= @article.content %></div>
    <h3>- コメント -</h3>
    <% @comments.each do |comment| %>
        <ul>
          <% if comment.user_id.present? %>
          <% user = User.find(comment.user_id) %>
              <%= image_tag user.image_url(:thumb_i) %>
              <%= link_to user.name, user_path(user.id) %>
          <% end %>
          <%= comment.comment %>
        </ul>
    <% end %>
  </div>

  <!--url処理-->
  <!--①https://www.youtube.com/watch?v=0-ZjYq8-SHw-->
  <!--②https://www.youtube.com/embed/0-ZjYq8-SHw-->
  <!--①内のwatch?v=　を②のembed/の形にして保存-->

</div>