<ul>
    <div class="article">
      <div class="content">
      <div class="content-sub">
        <% user = @article.user %>
        <%= image_tag user.image_url(:thumb_i) %>
        <%= link_to user.name, user_path(user.id) %>
        <div><h2><%= link_to @article.title, article_path(@article.id) %></h2></div>
      </div>

          <iframe width="500" height="350" src="<%= @article.youtube_url %>" frameborder="0" allowfullscreen></iframe>

      <div class="content-sub">
      <% if user_signed_in? %>
              <% if favorite_article?(@article) %>
                  <%= button_to "お気に入り", favorite_article_path(@article.id), method: :favorite, data: {confirm: "お気に入りに追加しますか"}, class: 'btn btn-primary btn-xs' %>
              <% else %>
                  <%= button_to "お気に入り削除", favorite_destroy_article_path(@article.id), method: :delete, data: {confirm: "削除していいですか？"}, class: 'btn btn-danger btn-xs' %>
              <% end %>
              <div class="content"><%= @article.content %></div>

              <%= form_for ([@article, @comment]) do |f| %>
                  <p>
                    <%= f.label :comment %><br>
                    <%= f.text_area :comment %>
                    <%= f.hidden_field :user_id, :value => current_user.id %>
                    <%= f.hidden_field :article_id, :value => @article.id %>
                    <% if @comment.errors.any? %>
                        <%= @comment.errors.messages[:comment][0] %>
                    <% end %>
                  </p>

                  <p>
                    <%= f.submit :'コメントする', :class => "btn btn-primary" %>
                  </p>

              <% end %>
          <% end %>


          <% @comments.each do |comment| %>
              <ul>
                <%# if comment.user_id.present? %>
                <% user = User.find(comment.user_id) %>
                <%= image_tag user.image_url(:thumb_i) %>
                <%= link_to user.name, user_path(user.id) %>
                <%# end %>
                <%= comment.comment %>
                <% if comment_owner?(comment) %>
                    <%= link_to "削除", article_comment_path(comment.article_id, comment.id), data: {confirm: "本当に良いですか？"}, method: :delete, class: 'btn btn-danger btn-xs' %>
                <% end %>
              </ul>
          <% end %>
        </div>
    </div>
  </div>

  <h3>- gracenote -</h3>

  <%= form_tag({:action => "article_search"}, {:method => "get"}) do %>

      <p><%= label :artist, :artist %></p>

      <p><%= text_field_tag "artist", params[:artist] %></p>

      <p><%= label :album_title, :album_title %></p>

      <p><%= text_field_tag "album_title", params[:album_title] %></p>

      <p><%= label :track_title, :track_title %></p>

      <p><%= text_field_tag "track_title", params[:track_title] %></p>

      <p><%= submit_tag "検索", :class => "btn btn-primary" %></p>
  <% end %>


  取得結果<br/>
  <% @result.each do |rec| %>
      <div class="table">
        <table>
          <tr>
            <td width="180px">アルバムアーティスト名</td>
            <td><%= rec[:album_artist_name] %>
          </tr>
          <tr>
            <td>アルバムタイトル</td>
            <td><%= rec[:album_title] %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td>
              <% rec[:genre].each do |genre| %><%= genre[:text] + ' / ' %>
              <% end %></td>
          </tr>
          <tr>
          <tr>
            <td>説明</td>
            <td><%= link_to 'プロフィール情報', rec[:artist_image_url][1] %></td>
          </tr>
          <tr>
            <td>ムード</td>
            <td>
              <% rec[:tracks].each do |track| %>
                  <% track[:mood].each do |mood| %>
                      <%= mood[:text] + " / " %>
                  <% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>テンポ</td>
            <td>
              <% rec[:tracks].each do |track| %>
                  <% track[:tempo].each do |tempo| %>
                      <%= tempo[:text] + " / " %>
                  <% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>アルバムアート</td>
            <td><img src="<%= rec[:album_art_url][0] %>"/></td>
          </tr>
          <tr>
            <td>アーティスト画像</td>
            <td><img src="<%= rec[:artist_image_url][0] %>"/></td>
          </tr>
        </table>
      </div>
  <% end %>

  <br>

</ul>

