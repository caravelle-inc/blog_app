
<% @user_articles.each do |article| %>
    <div><h4><%= link_to article.title, article_path(article.id) %></h4></div>
    <iframe width="300" height="200" src="<%= article.youtube_url %>" frameborder="0" allowfullscreen></iframe>
    <% if user_signed_in? %>
        <% if favorite_article?(article) %>
            <div><%= button_to "お気に入り", favorite_article_path(article.id), method: :favorite, data: {confirm: "お気に入りに追加しますか"}, class: 'btn btn-primary btn-xs' %></div>
        <% else %>
            <div><%= button_to "お気に入り削除", favorite_destroy_article_path(article.id), method: :delete, data: {confirm: "削除していいですか？"}, class: 'btn btn-danger btn-xs' %></div>
        <% end %>
        <% if article_owner?(article) %>
            <div><%= button_to "編集", edit_article_path(article.id), method: :get, class: 'btn btn-primary btn-xs' %></div>
            <div><%= button_to "削除", article_path(article.id), method: :delete, data: {confirm: "削除していいですか？"}, class: 'btn btn-danger btn-xs' %>
        <% end %>
    <% end %>
    </div>
<% end %>


<div><%= link_to "[Back]", user_path(@user.id) %></div>
