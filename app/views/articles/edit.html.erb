<div id="main">

<h2>Article Edit</h2>

<div id="sidebar">
  <div>
    <h3>< New ></h3>
    <% @articles_new.each do |a| %>
        <li>
          <%= link_to a.title, article_path(a.id) %>
        </li>
    <% end %>
  </div>
</div>


<div id="contents">
<%= form_for @article do |f| %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      <% if @article.errors.any? %>
          <%= @article.errors.messages[:title][0]%>
      <% end %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
      <% if @article.errors.any? %>
          <%= @article.errors.messages[:content][0]%>
      <% end %>
    </p>

    <p>
      <%= f.submit :"更新" %>
    </p>

<% end %>

<p><%= link_to "[Back]", user_path(@article.user_id) %></p>
</div>

</div>