<div class="main">
  <h2>Article</h2>

  <div class="sidebar">
    <div>
      <h3>< Pickup ></h3>
      <% @articles_pn.each do |article| %>
          <li>
            <%= link_to article.title, article_path(article.id) %>
          </li>
      <% end %>
      <h3>< New ></h3>
      <% @articles_pn.each do |article| %>
          <li>
            <%= link_to article.title, article_path(article.id) %>
          </li>
      <% end %>
    </div>
  </div>

  <div class="contents">
    <%#= render partial: "articles/article_list", locals: {articles: @articles} %>
    <% @articles.each do |article| %>
        <li>
          <%= link_to article.title, article_path(article.id) %>
          <% if user_signed_in? %>
              <% if favorite_article?(article) %>
                  <%= button_to "お気に入り削除", favorite_destroy_article_path(article.id), method: :delete, data: {confirm: "削除していいですか？"} %>
              <% else %>
                  <%= button_to "お気に入り", favorite_article_path(article.id), method: :favorite, data: {confirm: "お気に入りに追加しますか"} %>
              <% end %>
          <% end %>
        </li>
    <% end %>
  </div>
</div>