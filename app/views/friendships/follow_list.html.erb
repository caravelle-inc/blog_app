<h2>Follow</h2>

<table class="table table-hover">
  <% @user.follow.each do |a| %>
      <tr>
        <td><%= image_tag a.image_url(:thumb_i) %>
          <%= link_to a.name, user_path(a.id) %></td>

        <% if user_signed_in? %>
            <td>
                  <%= button_to "unfollow", follow_destroy_friendship_path(a.id), data: {confirm: "フォローを外しますか？"}, method: :delete, class: 'btn btn-danger btn-xs' %>
            </td>
        <% end %>

      </tr>
  <% end %>
</table>


<div><%= link_to "Back", user_path(@user.id) %></div>


